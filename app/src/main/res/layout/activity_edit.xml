<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.husseiny.car.EditActivity">

    <!-- Overview of the car -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">
        <!-- Label Overview -->
        <TextView
            style="@style/Label"
            android:text="@string/overview_laberl" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <EditText
                android:id="@+id/model_id"
                style="@style/EditText"
                android:hint="@string/model_hint"
                android:inputType="textCapWords" />

            <Spinner
                style="@style/spinnerStyle"
                android:id="@+id/brand_spin"
                android:layout_below="@+id/model_id"
                android:entries="@array/brands" />

        </RelativeLayout>
    </LinearLayout>

    <!-- Price -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <TextView
            style="@style/Label"
            android:text="@string/price_label" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <EditText
                android:id="@+id/price_id"
                style="@style/EditText"
                android:hint="@string/price_label"
                android:inputType="number" />

            <TextView
                style="@style/EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:hint="$" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <TextView
            style="@style/Label"
            android:text="@string/description_label" />

        <EditText
            android:id="@+id/info_id"
            style="@style/EditText"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:hint="@string/description_label"
            android:inputType="text" />
    </LinearLayout>
</LinearLayout>